@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="Product" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Des</th>
                <th scope="col">Image</th>
                <th scope="col">Link</th>
                <th scope="col">CatName</th>
                <th colspan="2">Actions</th>
                
            </tr>
        </thead>
        <tbody>


          
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                     <td>@item.Title</td>
                     <td>@item.Des</td>
                     <td><img src="~/assets/imgs/portfolio/@item.Image" alt=""></td>
                     <td>@item.Link</td>
                     <td>@item.Category.CatName</td>
                    <td>
                        <a asp-action="edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

            


        </tbody>
    </table>
</div>


